<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_card_credits"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/DarkerGray">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card_credits"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:background="@color/DarkerGray"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_cv_card_credits"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_credits_card_credits"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/lbl_ori_name_card_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/img_credits_card_credits"
                app:layout_constraintStart_toStartOf="@+id/img_credits_card_credits"
                app:layout_constraintTop_toBottomOf="@+id/img_credits_card_credits" />

            <TextView
                android:id="@+id/lbl_char_name_card_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="@color/LightGray"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/lbl_ori_name_card_credits"
                app:layout_constraintStart_toStartOf="@+id/lbl_ori_name_card_credits"
                app:layout_constraintTop_toBottomOf="@+id/lbl_ori_name_card_credits" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>